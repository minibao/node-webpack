@import "~normalize.css"

*
  box-sizing: border-box
  
  &:before,
  &:after
    box-sizing: border-box

html
  font: 16px / 1.5 "Microsoft YaHei"
  min-width: 1024px
  min-height: 768px
  overflow: auto
  
ul
  margin: 0
  padding: 0
  list-style: none

html,
body
  width: 100%
  height: 100%
  margin: 0
  padding: 0

a,
a:link,
a:visited,
a:hover,
a:active
  color: inherit
  text-decoration: none
  
input
  padding: 0

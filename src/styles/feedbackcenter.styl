.list
	height: 100%
	background: #FFF
	border-radius: 4px
	border: 1px solid #D8E0EA
	overflow: hidden
	position: relative
	.list-header 
		height: 47px
		width: calc(100% - 240px - 20px)
		padding-left: 20px
		font-size: 14px
		border-bottom: 1px solid #D8E0EA
		line-height: 47px	
	.list-label 
		width: 100%
		height: 45px
		line-height: 45px
		font-size: 12px
		background: #F3F7FF	
		.list-label-left 
			float: left
			padding-left: 20px				
		.list-label-right 
			float: right
			width: 80px
			height: 25px
			line-height: 25px
			background: #78A7FF
			margin: 10px 20px 0 0
			text-align: center
			color: #FFF
			cursor: pointer
.list			
	.list-wrap 
		text-align: center
		font-size: 12px
		height: calc(100% - 47px - 45px)
		overflow-x: hidden
		overflow-y: auto
		
.modify-content-select-status
	margin-left: 100px

#app
  common-font()
  width: 100%
  height: 100%

.app-header
  height: 64px
  line-height: 64px

.app-content
  height: calc(100% - 64px - 40px)
  background: #E8EEF4
  
  .left-wrap
    float: left
    width: 240px
    position: relative
  
  .right-wrap
    // width: calc(100% - 240px)
    background: #D8E0EA
    padding: 10px 10px 30px

  .left-wrap,
  .right-wrap
    height: 100%
    overflow: hidden

.app-footer
  height: 40px
  line-height: 40px
  background: #4F5358
  color: #A1A3A4
  text-align: center

.app-header
  .brand
    float: left
    width: 240px
    background-color: #78a7ff
    font-size: 22px
    text-align: center
    color: #fff
    
    .icon-logo
      vertical-align: middle
    
    .brand-desc
      display: inline-block
      font-size: 20px
      letter-spacing: 2px
  
  .page-list
    float: left
    padding-left: 50px
    title-font()
    
    .page-list-item
      float: left
      margin-left: 45px
      cursor: pointer
      
      &.active
        color: #5686d8
      
      &:first-child
        margin-left: 0
  
  .user-operation-list
    float: right
    padding-right: 20px

.user-operation-list
  .user-operation-list-item
    float: left
    margin-left: 10px
    
    &:first-child
      margin-left: 0
      
    .icon
      vertical-align: middle
      cursor: pointer

/* data-platform menu */
.data-platform-list
  float: left
  width: 240px
  
  .data-platform-list-item
    
    &.active
      background-color: #3D6EBD
      
.user-operation-tips-main
  position: absolute
  padding-top: 16px
  top: 44px
  right: 20px
  z-index: 1
  display: none
  
.user-operation-tips-content
  background: #78A7FF
  border: none
  border-radius: 2px
  
.triangle-mix-inner-triangle.triangle-mix-user
  border-bottom-color: #78A7FF
  
.user-operation-user
  border-bottom-color: #fff
  color: #fff
  
.user-operation-pwd
  border: none
  color: #fff
  
// loading-mask
.loading-mask
  width: 100%
  height: 100%
  background: #ccc
  position: absolute
  top: 0
  left: 0
  opacity: 0.5
  text-align: center
  line-height: 1em
  
.loading-mask-icon
  display: inline-block
  width: 45px
  height: 45px
  background: url("~images/icon/loading-mask.gif") no-repeat
  vertical-align: middle
  margin-right: 5px
  
.loading-mask-content
  position: absolute
  left: 50%
  top: 50%
  margin-left: -45px
  margin-top: -45px

.loading-mask-text
  color: #fff
  font-size: 16px
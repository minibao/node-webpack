.optimization
  border-radius 5px
  background #fff
  position: absolute
  margin: -21px 0 0 -21px
  
.optimization-title
  width 100%
  height 52px
  background #B3C8EF
  border-radius 5px 5px 0 0
    
  .optimization-title-left
    height 52px
    line-height 52px
    float left
    color #fff
    margin-left 22px
      
  .optimization-title-right
    width 50px
    height 52px
    float right
    line-height 52px
    position: relative
      
    .optimization-title-right-cal
    .optimization-title-right-sub
      color #fff
      display inline-block
      margin-left 8px
      cursor pointer
      position: absolute
      left: 20px
      
    .optimization-title-right-sub
      font-size 20px
      font-weight 700
      left: 0
      top: -10px
        
.optimization-content
  width 100%
  height calc(100% - 52px)
    
  .optimization-content-left
    width 570px
    height 100%
    float left
    
    .optimization-content-left-main
      width 100%
      height 375px
      overflow-y scroll
        
.optimization-content-left-send
  width 100%
  height 45px
  border 1px solid #E1E9F5
  
.send-mode
  width 312px
  height 45px
  line-height 45px
  float left
  font-size: 12px
        
.mode-select
  display inline-block
  padding-left 30px
                  
  .select-circle
    display inline-block
    width 15px
    height 15px
    border 1px solid #BABBBD
    border-radius 50%
    margin-right 5px
    vertical-align middle
    cursor pointer
                            
    &:active
      background #78A7FF
                
.send-upload
  float left
  width 55px
  height 25px
  background #78a7ff
  border none
  border-radius 2px
  color #fff
  line-height 25px
  text-align center
  cursor pointer
  margin-left 20px
  margin-top (@height / 3)
  font-size: 12px
  
.send-clear
  float right
  width 49px
  height 45px
  line-height 45px
  color #78a7ff
  cursor pointer
  margin-right 20px
  font-size: 12px
          
.optimization-content-left-input
  width 100%
  height calc(100% - 52px - 375px - 45px)
  border-right 1px solid #E1E9F5
            
  .optimization-content-left-input-main
    width 100%
    height 107px
    border none
    resize none
            
  .optimization-content-left-input-button
    float right
    width 76px
    height 29px
    background #78a7ff
    border none
    color #fff
    border-radius 2px
    margin-right 15px
    cursor pointer
    font-size: 12px
          
.optimization-content-right
  width calc(100% - 570px)
  height 100%
  float right

.optimization-content-right-search
  width 100%
  height 60px
  position relative
  padding-top 12px
  
.right-search-title
  margin 0 10px
  font-size 14px
  color #333
  margin-bottom 16px
  
.right-search-input
  width calc(100% - 20px)
  height 19px
  margin-left 10px
  border none
  color #888
  padding-left 20px
  border-bottom 1px solid #E1E9F5
  font-size: 14px
  
.right-search-input-icon
  position absolute
  left 12px
  bottom: -6px
  display inline-block
  width 14px
  height 14px
  background url("~images/icon/search.png") no-repeat
  
.optimization-content-right-result
  width 100%
  height 315px
  border-bottom 1px solid #E1E9F5

.optimization-content-right-add
  width 100%
  height calc(100% - 60px - 315px)
  
.optimization-add-title
  width 100%
  height 45px
  line-height 45px
  margin 0 10px
  font-size 14px
  color #333

.optimization-rule
  width calc(100% - 20px)
  height 73px
  margin-left 10px
  border 1px solid #E1E9F5
  resize none
  
.ptimization-rule-warn
  margin 0 10px
  font-size 14px
  color #333
  
.optimization-Storage
  float right
  margin 18px 
  width 75px
  height 27px
  background #fff
  border 1px solid #78A7FF
  border-radius 3px
  color #78A7FF
  font-size: 12px
  cursor: pointer
  